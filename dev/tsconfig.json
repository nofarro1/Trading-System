{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "sourceMap": true,
    "outDir": "dist",
    "strict": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "types": ["reflect-metadata","jest"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDirs": ["./src","./tests"],
    "skipLibCheck": true,
//    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2018", "dom"],
    "importHelpers": true
  },
  "exclude": [
    "node_modules"
  ]
}